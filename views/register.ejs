
<%- include('partials/header') %>
<div class='container'>

    <div class="row d-flex justify-content-center">
      
      <div class="col-6">
        <h3>Register</h3>
        <form method="POST" action="/register">
            <div class="form-group">
                <label for="email">Email:</label>
                <input required type="email" class="form-control" id="email" placeholder="email" name="username">
            </div>
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input required type="text" class="form-control" id="firstName" placeholder="First Name" name="firstName">
            </div>
                
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input required type="text" class="form-control" id="lastName" placeholder="Last Name" name="lastName">
            </div>
                
                
            <div class="form-group">
                <label for="password">Password</label>
                <input required type="text" id="password" class="form-control" placeholder="password" name="password">
            </div>
                
            <button type="submit" class="btn btn-primary btn-block">Register</button>
            <a href="/login" style="text-align: center" >Go to login page. </a>
            
            
        </form>
      </div>
    </div>
</div>
<%- include('partials/footer') %>